{% trans_default_domain 'FOSUserBundle' %}

<h2>Change Password</h2>
{{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password form-signin' } }) }}
    {{ form_widget(form) }}
    <input type="submit" id="_submit" name="_submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-lg btn-primary btn-block" />
{{ form_end(form) }}